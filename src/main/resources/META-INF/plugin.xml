<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.kevinthegreat.FPP</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>FPP</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/kevinthegreat1/FPP-JetBrains">Kevinthegreat</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Adds F Prime Prime language support including syntax highlighting and error checking.</description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="FPP File"
                implementationClass="com.kevinthegreat.fpp.FPPFileType"
                fieldName="INSTANCE"
                language="FPP"
                extensions="fpp;fppi"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.FPPParserDefinition"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.syntaxHighlighterFactory
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.highlighter.FPPSyntaxHighlighterFactory"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <annotator
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.FPPAnnotator"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor
                language="FPP"
                implementation="com.kevinthegreat.fpp.FPPReferenceContributor"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.findUsagesProvider
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.FPPFindUsagesProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.refactoringSupport
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.FPPRefactoringSupportProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.elementManipulator
                forClass="com.kevinthegreat.fpp.psi.FPPQualifiedIdentifier"
                implementationClass="com.kevinthegreat.fpp.psi.FPPQualifiedIdentifierManipulator"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <lang.commenter
                language="FPP"
                implementationClass="com.kevinthegreat.fpp.FPPCommenter"/>
    </extensions>
</idea-plugin>